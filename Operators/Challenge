#include <iostream>

using namespace std;

int main() {
    
    int total{-1},  remain{};
    const int dollars{100}, quarters {25}, dimes {10}, nickel{5}, penny{1};
    
    do {cout<<"Please enter an amount of cents: ";
    cin >> total;
    }
    while (total<=0);
    
    cout << endl; 
    cout << "dollars: " << total / dollars << endl;
    total = total % dollars;
	cout << "quarters: " << total / quarters << endl;
    total = total % quarters;
	cout << "dimes: "<<total/dimes << endl;
    total = total % dimes;
	cout << "nickels: "<<total / nickel << endl;
    total = total % nickel;
	cout << "pennies: "<< total / penny << endl;
    return 0;
}

